---
import '../../styles/trimesh.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Fast, safe, accurate roof and exterior inspections using the Mavic 3 Pro zoom lens. Storm damage, hail documentation, and solar panel inspections.">
    <title>Roof & Exterior Inspections | Trimesh Drone Solutions</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <header class="trimesh-header">
        <div class="header-container">
            <a href="/" class="header-logo">
                <img src="/img/TriMesh_Logo_alpha.png" alt="Trimesh Drone Solutions" class="logo-image">
                <div class="logo-text">
                    <span class="logo-name">TRIMESH</span>
                    <span class="logo-subtitle">Drone Solutions</span>
                </div>
            </a>

            <nav class="header-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/#services" class="nav-link">Services</a>
                <a href="/#work" class="nav-link">Our Work</a>
                <span class="nav-link coming-soon-nav" title="Coming soon">About <span class="coming-soon-badge">Soon</span></span>
            </nav>

            <div class="header-cta">
                <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="cta-button-header">
                    Request a Quote
                </a>
            </div>

            <button class="mobile-menu-btn" aria-label="Toggle mobile menu">
                <span class="menu-line"></span>
                <span class="menu-line"></span>
                <span class="menu-line"></span>
            </button>
        </div>

        <div class="mobile-menu">
            <a href="/" class="mobile-nav-link">Home</a>
            <a href="/#services" class="mobile-nav-link">Services</a>
            <a href="/#work" class="mobile-nav-link">Our Work</a>
            <span class="mobile-nav-link coming-soon-nav" title="Coming soon">About <span class="coming-soon-badge">Soon</span></span>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="mobile-cta-link">
                Request a Quote
            </a>
        </div>
    </header>

    <section class="service-detail-hero">
        <div class="container">
            <a href="/#services" class="breadcrumb">← Back to Services</a>
            <h1 class="service-detail-title">Roof & Exterior Inspection</h1>
            <p class="service-detail-subtitle">Fast, safe, accurate inspections using the Mavic 3 Pro zoom lens.</p>
            <div class="service-detail-price">Starting at <strong>$125</strong></div>
        </div>
    </section>

    <section class="service-detail-section">
        <div class="container">
            <h2 class="service-section-title">Capabilities</h2>
            <div class="service-features-grid">
                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Storm Damage</h3>
                    <p>Comprehensive damage assessment after severe weather events</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                            <circle cx="12" cy="12" r="6" stroke="currentColor" stroke-width="2"/>
                            <circle cx="12" cy="12" r="2" fill="currentColor"/>
                        </svg>
                    </div>
                    <h3>Hail Documentation</h3>
                    <p>Detailed imagery for insurance claims and repair estimates</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="12" cy="12" r="5" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 2v2M12 20v2M22 12h-2M4 12H2M19.07 4.93l-1.41 1.41M6.34 17.66l-1.41 1.41M19.07 19.07l-1.41-1.41M6.34 6.34L4.93 4.93" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h3>Solar Panel Inspection</h3>
                    <p>Visual inspection of panel condition and array layout</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 21h18L12 3 3 21z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M9 18h6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h3>Gutters & Flashing</h3>
                    <p>Identify drainage issues and installation problems</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="4" y="4" width="16" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 8v8M8 12h8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h3>Chimney + Penetrations</h3>
                    <p>Close-up inspection of roof penetrations and seals</p>
                </div>
            </div>
        </div>
    </section>

    <section class="service-deliverables">
        <div class="container">
            <h2 class="service-section-title">Delivered Files</h2>
            <div class="deliverables-list">
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>High-resolution photo set</strong> - Multiple angles and zoom levels</span>
                </div>
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>Annotated PDF</strong> - Optional markup of issues found (add-on)</span>
                </div>
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>Raw images</strong> - Full-resolution originals available on request</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing -->
    <section class="service-pricing-section">
        <div class="container">
            <h2 class="service-section-title">Pricing</h2>
            <div class="pricing-grid">
                <div class="pricing-card featured">
                    <div class="featured-badge">Most Popular</div>
                    <h3>Standard Roof</h3>
                    <div class="price">$125</div>
                    <p>Single-family homes and simple structures</p>
                </div>
                <div class="pricing-card">
                    <h3>Storm Damage</h3>
                    <div class="price">$125–$150</div>
                    <p>Post-storm documentation</p>
                </div>
                <div class="pricing-card">
                    <h3>Complex Roof</h3>
                    <div class="price">$175–$225</div>
                    <p>Multi-structure or large roofs</p>
                </div>
                <div class="pricing-card">
                    <h3>HOA Bundle</h3>
                    <div class="price">$75<span>/unit</span></div>
                    <p>5+ units, volume pricing</p>
                </div>
            </div>
        </div>
    </section>

    <section class="service-perfect-for">
        <div class="container">
            <h2 class="service-section-title">Perfect For</h2>
            <div class="perfect-for-grid">
                <div class="perfect-for-item">Roofers</div>
                <div class="perfect-for-item">Insurance Adjusters</div>
                <div class="perfect-for-item">Homeowners</div>
                <div class="perfect-for-item">Solar Companies</div>
            </div>
        </div>
    </section>

    <section class="service-cta-section">
        <div class="container">
            <h2>Need a Roof Inspection?</h2>
            <p>Safe, fast, and thorough aerial inspections without climbing.</p>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="service-cta-button">
                Request a Quote
            </a>
        </div>
    </section>

    <footer class="trimesh-footer">
        <div class="footer-container">
            <div class="footer-left">
                <h3>Trimesh Drone Solutions LLC</h3>
                <p>Austin, TX</p>
                <p>Part 107 Certified Pilot</p>
            </div>
            <div class="footer-right">
                <div class="footer-links">
                    <a href="/">Home</a>
                    <a href="/#services">Services</a>
                    <span class="coming-soon-link" title="Coming soon">About <span class="coming-soon-badge">Soon</span></span>
                    <a href="/#work">Portfolio</a>
                    <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer">Request a Quote</a>
                </div>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms</a>
                    <span class="coming-soon-link" title="Site coming soon">Austin Skyline Media <span class="coming-soon-badge">Coming Soon</span> →</span>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Trimesh Drone Solutions LLC. All rights reserved.</p>
        </div>
    </footer>

    <script>
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });
            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link, .mobile-cta-link');
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                });
            });
        }

        const header = document.querySelector('.trimesh-header');
        if (header) {
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
        }
    </script>
</body>
</html>

