---
import '../../styles/trimesh.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Turn-key aerial documentation for property managers and HOAs. Roof sets, parking lot documentation, and community mapping.">
    <title>Property & HOA Documentation | Trimesh Drone Solutions</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <header class="trimesh-header">
        <div class="header-container">
            <a href="/" class="header-logo">
                <img src="/img/TriMesh_Logo_alpha.png" alt="Trimesh Drone Solutions" class="logo-image">
                <div class="logo-text">
                    <span class="logo-name">TRIMESH</span>
                    <span class="logo-subtitle">Drone Solutions</span>
                </div>
            </a>

            <nav class="header-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/#services" class="nav-link">Services</a>
                <a href="/#work" class="nav-link">Our Work</a>
                <span class="nav-link coming-soon-nav" title="Coming soon">About <span class="coming-soon-badge">Soon</span></span>
            </nav>

            <div class="header-cta">
                <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="cta-button-header">
                    Request a Quote
                </a>
            </div>

            <button class="mobile-menu-btn" aria-label="Toggle mobile menu">
                <span class="menu-line"></span>
                <span class="menu-line"></span>
                <span class="menu-line"></span>
            </button>
        </div>

        <div class="mobile-menu">
            <a href="/" class="mobile-nav-link">Home</a>
            <a href="/#services" class="mobile-nav-link">Services</a>
            <a href="/#work" class="mobile-nav-link">Our Work</a>
            <span class="mobile-nav-link coming-soon-nav" title="Coming soon">About <span class="coming-soon-badge">Soon</span></span>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="mobile-cta-link">
                Request a Quote
            </a>
        </div>
    </header>

    <section class="service-detail-hero">
        <div class="container">
            <a href="/#services" class="breadcrumb">← Back to Services</a>
            <h1 class="service-detail-title">Property & HOA Documentation</h1>
            <p class="service-detail-subtitle">Turn-key documentation for property managers and HOAs.</p>
            <div class="service-detail-price">Custom pricing based on property size</div>
        </div>
    </section>

    <section class="service-detail-section">
        <div class="container">
            <h2 class="service-section-title">Capabilities</h2>
            <div class="service-features-grid">
                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 21h18L12 3 3 21z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M9 18h6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    </div>
                    <h3>Roof Sets for HOA Units</h3>
                    <p>Comprehensive roof documentation for all units in the community</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Parking Lot Documentation</h3>
                    <p>Overhead views for striping, condition assessment, and planning</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h3>Swimming Pool + Amenities</h3>
                    <p>Marketing and maintenance imagery of community features</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2L22 7L12 12L2 7L12 2Z" stroke="currentColor" stroke-width="2"/>
                            <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2"/>
                            <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </div>
                    <h3>Community Mapping</h3>
                    <p>Aerial overview maps of entire property for planning</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Post-Storm Documentation</h3>
                    <p>Rapid damage assessment after severe weather events</p>
                </div>
            </div>
        </div>
    </section>

    <section class="service-deliverables">
        <div class="container">
            <h2 class="service-section-title">Deliverables</h2>
            <div class="deliverables-list">
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>Photo set</strong> - Organized by unit or area</span>
                </div>
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>Aerial overview map</strong> - Complete property visualization</span>
                </div>
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>Optional DroneDeploy map</strong> - Interactive web-based mapping (add-on)</span>
                </div>
                <div class="deliverable-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span><strong>360 site walkthrough</strong> - Ground-level panoramic imagery (add-on)</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing -->
    <section class="service-pricing-section">
        <div class="container">
            <h2 class="service-section-title">Pricing</h2>
            <div class="pricing-grid">
                <div class="pricing-card">
                    <h3>Standard HOA Set</h3>
                    <div class="price">$200</div>
                    <p>Basic documentation package</p>
                </div>
                <div class="pricing-card">
                    <h3>Parking/Exterior</h3>
                    <div class="price">$150–$250</div>
                    <p>Lot and exterior documentation</p>
                </div>
                <div class="pricing-card">
                    <h3>Apartment Complex</h3>
                    <div class="price">$250–$350</div>
                    <p>Multi-building aerial sets</p>
                </div>
                <div class="pricing-card">
                    <h3>Storm Documentation</h3>
                    <div class="price">$300+</div>
                    <p>Post-storm community assessment</p>
                </div>
            </div>
        </div>
    </section>

    <section class="service-perfect-for">
        <div class="container">
            <h2 class="service-section-title">Perfect For</h2>
            <div class="perfect-for-grid">
                <div class="perfect-for-item">HOAs</div>
                <div class="perfect-for-item">Apartments</div>
                <div class="perfect-for-item">Commercial Properties</div>
                <div class="perfect-for-item">Property Managers</div>
            </div>
        </div>
    </section>

    <section class="service-cta-section">
        <div class="container">
            <h2>Ready to Document Your Property?</h2>
            <p>Comprehensive aerial documentation for efficient property management.</p>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="service-cta-button">
                Request a Quote
            </a>
        </div>
    </section>

    <footer class="trimesh-footer">
        <div class="footer-container">
            <div class="footer-left">
                <h3>Trimesh Drone Solutions LLC</h3>
                <p>Austin, TX</p>
                <p>Part 107 Certified Pilot</p>
            </div>
            <div class="footer-right">
                <div class="footer-links">
                    <a href="/">Home</a>
                    <a href="/#services">Services</a>
                    <span class="coming-soon-link" title="Coming soon">About <span class="coming-soon-badge">Soon</span></span>
                    <a href="/#work">Portfolio</a>
                    <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer">Request a Quote</a>
                </div>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms</a>
                    <span class="coming-soon-link" title="Site coming soon">Austin Skyline Media <span class="coming-soon-badge">Coming Soon</span> →</span>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Trimesh Drone Solutions LLC. All rights reserved.</p>
        </div>
    </footer>

    <script>
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });
            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link, .mobile-cta-link');
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                });
            });
        }

        const header = document.querySelector('.trimesh-header');
        if (header) {
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
        }
    </script>
</body>
</html>

