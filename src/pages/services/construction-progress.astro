---
import '../../styles/trimesh.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Professional aerial progress tracking for builders, contractors, and developers. Weekly, bi-weekly, or monthly drone documentation.">
    <title>Construction Progress Documentation | Trimesh Drone Solutions</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Oswald:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <!-- HEADER -->
    <header class="trimesh-header">
        <div class="header-container">
            <a href="/" class="header-logo">
                <img src="/img/TriMesh_Logo_alpha.png" alt="Trimesh Drone Solutions" class="logo-image">
                <div class="logo-text">
                    <span class="logo-name">TRIMESH</span>
                    <span class="logo-subtitle">Drone Solutions</span>
                </div>
            </a>

            <nav class="header-nav">
                <a href="/" class="nav-link">Home</a>
                <a href="/#services" class="nav-link">Services</a>
                <a href="/#work" class="nav-link">Our Work</a>
                <a href="/about" class="nav-link">About</a>
            </nav>

            <div class="header-cta">
                <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="cta-button-header">
                    Request a Quote
                </a>
            </div>

            <button class="mobile-menu-btn" aria-label="Toggle mobile menu">
                <span class="menu-line"></span>
                <span class="menu-line"></span>
                <span class="menu-line"></span>
            </button>
        </div>

        <div class="mobile-menu">
            <a href="/" class="mobile-nav-link">Home</a>
            <a href="/#services" class="mobile-nav-link">Services</a>
            <a href="/#work" class="mobile-nav-link">Our Work</a>
            <a href="/about" class="mobile-nav-link">About</a>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="mobile-cta-link">
                Request a Quote
            </a>
        </div>
    </header>

    <!-- Service Hero -->
    <section class="service-detail-hero">
        <div class="container">
            <a href="/#services" class="breadcrumb">← Back to Services</a>
            <h1 class="service-detail-title">Construction Progress Documentation</h1>
            <p class="service-detail-subtitle">Professional aerial progress tracking for builders, contractors, and developers.</p>
            <div class="service-detail-price">Starting at <strong>$200</strong> per visit</div>
        </div>
    </section>

    <!-- What You Get -->
    <section class="service-detail-section">
        <div class="container">
            <h2 class="service-section-title">What You Get</h2>
            <div class="service-features-grid">
                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Flexible Scheduling</h3>
                    <p>Weekly, bi-weekly, or monthly flights tailored to your project timeline</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Identical Flight Paths</h3>
                    <p>Consistent angles and perspectives for accurate progress comparison</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>High-Resolution Photos</h3>
                    <p>Crystal-clear imagery suitable for reports and presentations</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Aerial Video Sweeps</h3>
                    <p>Smooth cinematic footage showcasing overall project progress</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Optional 3D Model</h3>
                    <p>DroneDeploy 3D reconstruction for advanced visualization</p>
                </div>

                <div class="service-feature-item">
                    <div class="feature-icon">
                        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <h3>Monthly PDF Report</h3>
                    <p>Professional progress report ready to share with stakeholders</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing -->
    <section class="service-pricing-section">
        <div class="container">
            <h2 class="service-section-title">Pricing</h2>
            <div class="pricing-grid">
                <div class="pricing-card">
                    <h3>Single Visit</h3>
                    <div class="price">$200</div>
                    <p>One-time aerial documentation</p>
                </div>
                <div class="pricing-card">
                    <h3>Monthly Package</h3>
                    <div class="price">$250<span>/month</span></div>
                    <p>Once per month progress tracking</p>
                </div>
                <div class="pricing-card">
                    <h3>Bi-Weekly Package</h3>
                    <div class="price">$350<span>/month</span></div>
                    <p>Every two weeks documentation</p>
                </div>
                <div class="pricing-card featured">
                    <div class="featured-badge">Most Popular</div>
                    <h3>Weekly Package</h3>
                    <div class="price">$600<span>/month</span></div>
                    <p>Weekly progress tracking</p>
                </div>
            </div>
            <div class="pricing-addons">
                <h3>Add-Ons</h3>
                <div class="addon-list">
                    <div class="addon-item">
                        <span class="addon-name">DroneDeploy 3D Model</span>
                        <span class="addon-price">+ $75</span>
                    </div>
                    <div class="addon-item">
                        <span class="addon-name">360 Site Walkthrough (Insta360)</span>
                        <span class="addon-price">+ $100</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Perfect For -->
    <section class="service-perfect-for">
        <div class="container">
            <h2 class="service-section-title">Perfect For</h2>
            <div class="perfect-for-grid">
                <div class="perfect-for-item">Building Contractors</div>
                <div class="perfect-for-item">Commercial Construction</div>
                <div class="perfect-for-item">Home Builders</div>
                <div class="perfect-for-item">Investors</div>
                <div class="perfect-for-item">Roofing Companies</div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="service-cta-section">
        <div class="container">
            <h2>Ready to Document Your Project?</h2>
            <p>Get consistent, professional aerial documentation throughout your build.</p>
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer" class="service-cta-button">
                Request a Quote
            </a>
        </div>
    </section>

    <!-- FOOTER -->
    <footer class="trimesh-footer">
        <div class="footer-container">
            <div class="footer-left">
                <h3>Trimesh Drone Solutions LLC</h3>
                <p>Austin, TX</p>
                <p>Part 107 Certified Pilot</p>
            </div>

            <div class="footer-right">
                <div class="footer-links">
                    <a href="/">Home</a>
                    <a href="/#services">Services</a>
                    <a href="/about">About</a>
                    <a href="/#work">Portfolio</a>
                    <a href="https://docs.google.com/forms/d/e/1FAIpQLSdQg0p2j5mWsuIcq0BMYKhxfJqs6-1FRmoUKM-_VRaP16CEwQ/viewform" target="_blank" rel="noopener noreferrer">Request a Quote</a>
                </div>
                <div class="footer-links">
                    <a href="#">Privacy Policy</a>
                    <a href="#">Terms</a>
                    <span class="coming-soon-link" title="Site coming soon">Austin Skyline Media <span class="coming-soon-badge">Coming Soon</span> →</span>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Trimesh Drone Solutions LLC. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenuBtn.classList.toggle('active');
                mobileMenu.classList.toggle('active');
            });

            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link, .mobile-cta-link');
            mobileNavLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenuBtn.classList.remove('active');
                    mobileMenu.classList.remove('active');
                });
            });
        }

        // Header scroll effect
        const header = document.querySelector('.trimesh-header');
        if (header) {
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
        }
    </script>
</body>
</html>

