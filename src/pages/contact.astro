<body>

    <!-- Simple Navigation -->
    <nav class="trimesh-nav">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/">
                    <img src="/img/TriMesh_Logo_alpha.png" alt="Trimesh Drone Solutions" class="nav-logo">
                </a>
                <div class="brand-text">
                    <span class="brand-name">TRIMESH</span>
                    <span class="brand-tagline">Drone Solutions</span>
                </div>
            </div>
            
            <div class="nav-links">
                <a href="/" class="nav-link">Home</a>
                <a href="/about" class="nav-link">About</a>
                <a href="/contact" class="nav-link active">Contact</a>
            </div>
        </div>
    </nav>

    <main>
        <!-- Contact Hero Section -->
        <section class="contact-hero">
            <div class="container">
                <h1 class="contact-hero-title">Get In Touch</h1>
