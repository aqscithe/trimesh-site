        <!-- Service Selection Section -->
        <section class="contact-selection-section">
            <div class="container">
                <div class="contact-grid">
                    <!-- Drone Operations Contact -->
                    <div class="contact-card operations-card">
                        <div class="contact-card-header">
                            <div class="contact-icon">
